<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/update_specs_dialog_tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        android:hint="Enter Comment"
        app:layout_constraintTop_toBottomOf="@id/update_specs_dialog_tvTitle"
        android:id="@+id/update_specs_dialog_tvInput"
        />


    <Button
        android:id="@+id/update_specs_dialog_bDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/design_orange"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/update_specs_dialog_bCancel"
        app:layout_constraintTop_toBottomOf="@id/update_specs_dialog_tvInput" />

    <Button
        android:id="@+id/update_specs_dialog_bCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/design_orange"
        android:text="Cancel"
        android:visibility="gone"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@id/update_specs_dialog_bDownload"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_specs_dialog_tvInput" />


</androidx.constraintlayout.widget.ConstraintLayout>