<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_splash_cardview"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="30dp"
        android:elevation="10dp"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/activity_splash_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/arizon_logo_black" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/activity_splash_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arizon Systems"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_splash_cardview"
        android:layout_margin="20sp"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>