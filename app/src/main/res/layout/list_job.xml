<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_job_tvTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Job Title: "
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_job_tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/list_job_tvTitle1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_job_tvRecipe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Recipe: "
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_job_tvTitle" />

        <TextView
            android:id="@+id/list_job_tvRecipe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/list_job_tvRecipe1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_job_tvTitle" />

        <TextView
            android:id="@+id/list_job_tvStatus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Status: "
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_job_tvRecipe" />

        <TextView
            android:id="@+id/list_job_tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/list_job_tvStatus1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_job_tvRecipe" />

        <TextView
            android:id="@+id/list_job_tvDesc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Description: "
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_job_tvStatus" />

        <TextView
            android:id="@+id/list_job_tvDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/list_job_tvDesc1"
            app:layout_constraintRight_toRightOf="parent"
            android:singleLine="false"
            app:layout_constraintTop_toBottomOf="@+id/list_job_tvStatus" />

        <TextView
            android:id="@+id/list_job_tvUser1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="User: "
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_job_tvDesc" />

        <TextView
            android:id="@+id/list_job_tvUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/list_job_tvTime1"
            app:layout_constraintRight_toRightOf="parent"
            android:singleLine="false"
            app:layout_constraintTop_toBottomOf="@+id/list_job_tvDesc" />

        <TextView
            android:id="@+id/list_job_tvTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Date: "
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_job_tvUser" />

        <TextView
            android:id="@+id/list_job_tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/list_job_tvTime1"
            app:layout_constraintRight_toRightOf="parent"
            android:singleLine="false"
            app:layout_constraintTop_toBottomOf="@+id/list_job_tvUser" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>