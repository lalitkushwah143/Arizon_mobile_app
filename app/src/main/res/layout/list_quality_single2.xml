<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:id="@+id/list_quality_single2_layout"
       android:layout_height="wrap_content"
       android:padding="8dp">

       <TextView
           android:id="@+id/list_quality_single2_tv1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           android:text="Description: "
           android:textColor="@android:color/black"
           android:textStyle="bold"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/list_quality_single2_tvTitle"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           android:textColor="@android:color/black"
           app:layout_constraintLeft_toRightOf="@id/list_quality_single2_tv1"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/list_quality_single2_tv2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           android:text="Req. Parameters: "
           android:textColor="@android:color/black"
           android:textStyle="bold"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@id/list_quality_single2_tvTitle" />

       <TextView
           android:id="@+id/list_quality_single2_tvValue"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           android:textColor="@android:color/black"
           app:layout_constraintLeft_toRightOf="@id/list_quality_single2_tv2"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/list_quality_single2_tvTitle" />


       <TextView
           android:id="@+id/list_quality_single2_tv3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           android:text="Description: "
           android:textColor="@android:color/black"
           android:textStyle="bold"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@id/list_quality_single2_tvValue" />

       <TextView
           android:id="@+id/list_quality_single2_tvInst"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           android:textColor="@android:color/black"
           app:layout_constraintLeft_toRightOf="@id/list_quality_single2_tv3"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/list_quality_single2_tvValue" />

       <TextView
           android:id="@+id/list_quality_single2_tv4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           android:text="Req. Parameters: "
           android:textColor="@android:color/black"
           android:textStyle="bold"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@id/list_quality_single2_tvInst" />

       <TextView
           android:id="@+id/list_quality_single2_tvConn"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           android:textColor="@android:color/black"
           app:layout_constraintLeft_toRightOf="@id/list_quality_single2_tv4"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/list_quality_single2_tvInst" />

       <TextView
           android:id="@+id/list_quality_single2_tv5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           android:text="Status: "
           android:textColor="@android:color/black"
           android:textStyle="bold"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@id/list_quality_single2_tvConn" />

       <TextView
           android:id="@+id/list_quality_single2_tvStatus"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           android:textColor="@android:color/black"
           app:layout_constraintLeft_toRightOf="@id/list_quality_single2_tv5"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/list_quality_single2_tvConn" />

       <TextView
           android:id="@+id/list_quality_single2_tv6"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           android:text="Comment: "
           android:textColor="@android:color/black"
           android:textStyle="bold"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@id/list_quality_single2_tvStatus" />

       <TextView
           android:id="@+id/list_quality_single2_tvContent"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           android:textColor="@android:color/black"
           app:layout_constraintLeft_toRightOf="@id/list_quality_single2_tv6"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/list_quality_single2_tvStatus" />

   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>