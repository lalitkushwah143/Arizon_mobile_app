<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="4dp"
    app:cardCornerRadius="8dp"
    android:elevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/list_users_cardview"
        >
        <ImageView
            android:id="@+id/list_users_imageview"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:src="@drawable/ic_baseline_account_circle_24" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/list_users_ivAdmin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:padding="4dp"
        app:layout_constraintLeft_toLeftOf="@id/list_users_cardview"
        app:layout_constraintRight_toRightOf="@id/list_users_cardview"
        app:layout_constraintTop_toBottomOf="@id/list_users_cardview"
        app:srcCompat="@drawable/ic_baseline_lock_24"
        app:tint="@color/design_orange" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingLeft="4dp"
        android:text="First Name : "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/list_users_cardview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_users_tvFname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginRight="4dp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingLeft="4dp"
        android:text="Last Name : "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/list_users_cardview"
        app:layout_constraintTop_toBottomOf="@id/list_users_tvFname" />

    <TextView
        android:id="@+id/list_users_Lname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginRight="4dp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@id/tv2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_users_tvFname" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingLeft="4dp"
        android:text="Email : "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/list_users_cardview"
        app:layout_constraintTop_toBottomOf="@id/list_users_Lname" />

    <TextView
        android:id="@+id/list_users_tvEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginRight="4dp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@id/tv3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_users_Lname" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingLeft="4dp"
        android:text="Phone No. : "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/list_users_cardview"
        app:layout_constraintTop_toBottomOf="@id/list_users_tvEmail" />

    <TextView
        android:id="@+id/list_users_tvPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginRight="4dp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@id/tv4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_users_tvEmail" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingLeft="4dp"
        android:text="Password : "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/list_users_cardview"
        app:layout_constraintTop_toBottomOf="@id/list_users_tvPhone" />

    <TextView
        android:id="@+id/list_users_tvPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginRight="4dp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@id/tv5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_users_tvPhone" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingLeft="4dp"
        android:text="Role : "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/list_users_cardview"
        app:layout_constraintTop_toBottomOf="@id/list_users_tvPass" />

    <TextView
        android:id="@+id/list_users_tvRole"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginRight="4dp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@id/tv6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_users_tvPass" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>